{% extends 'admin.html.twig' %}

{% block heading %}Список категорий{% endblock %}

{% block body %}
    <ul>
        <li>
            <a href="{{ path('admin_blog_category_new') }}">Добавить категорию</a>
        </li>
    </ul>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            {#<th>Description</th>#}
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                {#<td>{% if category.description %}{{ category.description }}{% endif %}</td>#}
                <td>
                    <a href="{{ path('admin_blog_category_edit', { 'id': category.id }) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('admin_blog_category_delete', { 'id': category.id }) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}