{% extends 'admin.html.twig' %}

{% block heading %}Редактировать: {{ post.name }}{% endblock %}

{% block body %}
    <a href="{{ path('admin_blog_list_posts') }}">Back to the list</a>


    {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            <div class="control-label col-sm-2">{{ form_label(edit_form.name) }}</div>
            <div class="col-sm-10">
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">{{ form_label(edit_form.category) }}</div>
            <div class="col-sm-10">
                {{ form_errors(edit_form.category) }}
                {{ form_widget(edit_form.category, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">{{ form_label(edit_form.tags) }}</div>
            <div class="col-sm-10">
                {{ form_errors(edit_form.tags) }}
                {{ form_widget(edit_form.tags, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">{{ form_label(edit_form.description) }}</div>
            <div class="col-sm-10">
                {{ form_errors(edit_form.description) }}
                {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">{{ form_label(edit_form.content) }}</div>
            <div class="col-sm-10">
                {{ form_errors(edit_form.content) }}
                {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        {{ form_widget(edit_form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="{{ path('admin_blog_posts_delete', { 'id': post.id }) }}" class="btn btn-danger">Delete</a>

            </div>
        </div>

    {{ form_end(edit_form) }}


{% endblock %}
