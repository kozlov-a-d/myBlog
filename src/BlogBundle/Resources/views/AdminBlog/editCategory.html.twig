{% extends 'admin.html.twig' %}

{% block heading %}Редактировать: {{ category.name }}{% endblock %}

{% block body %}
    <a href="{{ path('admin_blog_list_category') }}">Back to the list</a>


    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.name) }}</div>
        <div class="col-sm-10">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        {% if new is defined %}
            <input type="submit" class="btn btn-primary" value="Add" />
        {% else %}
            <input type="submit" class="btn btn-primary" value="Save" />
            <a href="{{ path('admin_blog_category_delete', { 'id': category.id }) }}" class="btn btn-danger">Delete</a>
        {% endif %}
        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}
