{% extends 'admin.html.twig' %}

{% block heading %}Добавить пост{% endblock %}

{% block body %}
    <a href="{{ path('admin_blog_list_posts') }}">Back to the list</a>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.name) }}</div>
        <div class="col-sm-10">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.category) }}</div>
        <div class="col-sm-10">
            {{ form_errors(form.category) }}
            {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.tags) }}</div>
        <div class="col-sm-10">
            {{ form_errors(form.tags) }}
            {{ form_widget(form.tags, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.description) }}</div>
        <div class="col-sm-10">
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">{{ form_label(form.content) }}</div>
        <div class="col-sm-10">
            {{ form_errors(form.content) }}
            {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary" value="Add" />
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
